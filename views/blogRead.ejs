<!DOCTYPE html>
<html lang="ja">
<head>
    <title><%= singleBlog.title %></title>
    <%- include("./head"); %> 
</head>
<body>
    <%- include("./header"); %>
    <main>
    <div class="blog-read">
        <h2><%= singleBlog.title %></h2>
        <img src="/public/images<%= singleBlog.image %>" alt="blog-image"/>
        <p><%= singleBlog.textBody %></p>
    </div>
    <div class="bottom">
        <% if(session !== undefined){ %>
          <a href="/blog/update/<%= singleBlog._id %>" class="update-button">編集</a>
        <% } %>
        <% if(session !== undefined){ %>
          <a href="/blog/delete/<%= singleBlog._id %>" class="delete-button">削除</a>
        <% } %>
    </div>
    </main>
    <%- include("./footer"); %>
</body>
</html>