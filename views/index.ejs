<!DOCTYPE html>
<html lang="ja">

<head>
    <title>Masa Blog</title>
    <%- include("./head"); %>
</head>

<body>
    <%- include("./header"); %>
    <% if(session===undefined){ %>
        <a href="/user/login" class="login-button">ログイン</a>
    <% } %>
        <main class="allBlog">
            <div class="grid-container">
                <% allBlogs.forEach((blog)=> { %>
                    <div class="card">
                        <a href="blog/<%= blog._id %>">
                            <img src="/public/images<%= blog.image %>" alt="blog-image" />
                            <div class="texts-area">
                                <h2>
                                    <%= blog.title %>
                                </h2>
                                <p>
                                    <%= blog.summary %>
                                </p>
                            </div>
                        </a>
                    </div>
                    <% }) %>
            </div>
            
            <div class="bottom">
                <% if(session !==undefined){ %>
                    <a href="/blog/create" class="create-button">記事を書く</a>
                <% } %>
            </div>
        </main>
        <%- include("./footer"); %>
</body>

</html>